<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "info@example.com" %>
  </div>
  <div class="form-group">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "6文字以上" %>
  </div>
  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
