<h3>新規登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "registration-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :ニックネーム %> <br />
    <%= f.text_field :name, class: "form-control" , placeholder: "※他のユーザーからも見られます"%>
  </div>
  
  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "info@example.com" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %>
    <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上" %>
  </div>

  <div class="form-group">
    <%= f.label :確認用パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
